<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Camp Title:</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Camp Location:</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL:</label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="image"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description:</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          required
        ></textarea>
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input
          type="text"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
          name="campground[price]"
          placeholder="Price per night"
          required
        />
        <span class="input-group-text">.00</span>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" type="submit">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">Back</a>
  </div>
</div>
